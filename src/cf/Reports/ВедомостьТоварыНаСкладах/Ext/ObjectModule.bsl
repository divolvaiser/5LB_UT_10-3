// ПРОЦЕДУРЫ И ФУНКЦИИ ФОРМИРОВАНИЯ ОТЧЕТА 
	
// Процедура формирования отчета
//
Процедура СформироватьОтчет(ТабличныйДокумент) Экспорт
	
	// Перед формирование отчета можно установить необходимые параметры универсального отчета.
	Если СокрЛП(ПараметрыСеанса.ТекущийПользователь.Наименование)="Losev Igor" Тогда
		Запрос = Новый Запрос;
		Запрос.Текст = "ВЫБРАТЬ
		|Р.Склад
		|ИЗ РегистрСведений.СоставГруппДоступностиМагазинов КАК Р
		|ГДЕ Р.ГруппаДоступности = &Юзер";
		Запрос.УстановитьПараметр("Юзер", ПараметрыСеанса.ТекущийПользователь.Ссылка);
		
		Рез = Запрос.Выполнить();
		Если Рез.Пустой() Тогда
			Доступ=0;
			Сообщить ("Вы не прикреплены к магазину. Обратитесь к руководству");
			возврат;
		КонецЕсли;
		
		Форма = ПолучитьОбщуюФорму("ДополнительныеНастройкиОтч");
		Форма.ОткрытьМодально();
		ТабСклады = Форма.ТабСклад;
		ТабБренды = Форма.ТабБренды;
				
		Если ТабСклады.Количество() = 0 Тогда
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.Использование=Ложь;
		Иначе
			СпискаСкл = Новый СписокЗначений;
			Для каждого ст из ТабСклады Цикл
				СпискаСкл.Добавить(ст.Магазин);
			КонецЦикла;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.Использование=Истина;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.ВидСравнения = ВидСравнения.ВСписке;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.Значение = СпискаСкл;
		КонецЕсли;
		
		Если ТабБренды.Количество()=0 Тогда
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Номенклатура.Использование=Ложь;
		Иначе
			СпискаБр = Новый СписокЗначений;
			Для каждого ст из ТабБренды Цикл
				СпискаБр.Добавить(ст.Бренд);
			КонецЦикла;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Номенклатура.Использование=Истина;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Номенклатура.ВидСравнения = ВидСравнения.ВСпискеПоИерархии;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Номенклатура.Значение = СпискаБр;
		КонецЕсли;
	КонецЕсли;
	
	//++ Кузнецов С.А. - Ограничение доступности к складам и выбор группы для Администраторов магазинов - Задача в МегаПлане №1003407 - 29.07.2016
	Если УправлениеПользователями.ПолучитьЗначениеПоУмолчанию(ПараметрыСеанса.ТекущийПользователь, "УчетнаяЗаписьАдминистратораМагазинов") Тогда
		
		// Проверка на период формирования отчета - промежуток не более 3 месяцев
		Если НЕ ЗначениеЗаполнено(УниверсальныйОтчет.ДатаНач) И НЕ ЗначениеЗаполнено(УниверсальныйОтчет.ДатаКон) Тогда
			Сообщить("Укажите период формирования отчета!");
			Возврат;
		ИначеЕсли НЕ ЗначениеЗаполнено(УниверсальныйОтчет.ДатаНач) И ЗначениеЗаполнено(УниверсальныйОтчет.ДатаКон) Тогда	
			количествоСекунд = УниверсальныйОтчет.ДатаКон - УниверсальныйОтчет.ДатаНач; 
		ИначеЕсли ЗначениеЗаполнено(УниверсальныйОтчет.ДатаНач) И НЕ ЗначениеЗаполнено(УниверсальныйОтчет.ДатаКон) Тогда
			количествоСекунд = ТекущаяДата() - УниверсальныйОтчет.ДатаНач; 
		Иначе
			количествоСекунд = УниверсальныйОтчет.ДатаКон - УниверсальныйОтчет.ДатаНач;
		КонецЕсли;	
		Если количествоСекунд > 93*86400 Тогда
			Сообщить("Период отчета превышает 3 месяца!");
			Возврат;
		КонецЕсли;

		// Получаем список доступных магазинов для анализа
		Запрос = Новый Запрос;
		Запрос.Текст = "ВЫБРАТЬ
		|	Р.Склад КАК Магазин
		|ИЗ
		|	РегистрСведений.СоставГруппДоступностиМагазинов КАК Р
		|ГДЕ
		|	Р.ГруппаДоступности = &Пользователь";
		Запрос.УстановитьПараметр("Пользователь", ПараметрыСеанса.ТекущийПользователь);
		Рез = Запрос.Выполнить();
		Если Рез.Пустой() Тогда
			Доступ=0;
			Сообщить("Вы не прикреплены к магазину. Обратитесь к руководству!");
			возврат;
		КонецЕсли;
		
		// Открываем дополнительную форму настроек отчета
		Форма = ПолучитьОбщуюФорму("ДополнительныеНастройкиОтч");			
		МассивДоступныхСкладов = Рез.Выгрузить().ВыгрузитьКолонку("Магазин");		
		Для Каждого доступногоСклада Из МассивДоступныхСкладов Цикл
		   новСтрСклада = Форма.ТабСклад.Добавить();
		   новСтрСклада.Магазин = доступногоСклада;
		КонецЦикла;	
		Форма.ЭлементыФормы.Добавить.Видимость = Ложь;
		Форма.ЭлементыФормы.Склады.ТолькоПросмотр = Истина;
		Форма.ОткрытьМодально();
		ТабСклады = Форма.ТабСклад;
		ТабБренды = Форма.ТабБренды;
		
		Если ТабСклады.Количество() = 0 Тогда
			Сообщить("Нельзя сформировать отчет без указания складов!");
			возврат;
		Иначе
			СпискаСкл = Новый СписокЗначений;
			Для каждого ст из ТабСклады Цикл
				СпискаСкл.Добавить(ст.Магазин);
			КонецЦикла;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.Использование=Истина;
			УниверсальныйОтчет.ПостроительОтчета.Отбор.Склад.ВидСравнения = ВидСравнения.ВСписке;
